{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
        "name": "client",
        "image": "jesquivel2/multi-client",
        "hostname": "client",
        "essential": false
    },
    { 
        "name": "server",
        "image": "jesquivel2/multi-server",
        "hostname": "api",
        "essential": "false"
    },
    {
        "name": "worker",
        "image": "jesquivel2/multi-worker",
        "essential": false
    },
    {
        "name": "nginx",
        "image": "jesquivel2/multi-nginx",
        "essential": true,
        "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 80
            }
        ],
        "links": ["client", "server"]
    }
  ]  
}
